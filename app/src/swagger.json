{
    "openapi": "3.0.3",
    "info": {
        "title": "API para gerenciar tarefas",
        "description": "Essa API te ajudarar a genreciar suas tarefa de formas simples e direta",
        "termsOfService": "http://swagger.io/terms/",
        "version": "1.0.11"
    },
    "servers": [
        {
            "url": "https://http://localhost:8080"
        }
    ],
    "paths": {
        "/list": {
            "get": {
                "summary": "Mostrar uma lista",
                "description": "Mostrar uma lista com todas as tarefas",
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/task"
                                }
                            },
                            "application/xml": {
                                "schema": {
                                    "$ref": "#/components/schemas/task"
                                }
                            }
                        }
                    }
                }
            }
        },
"/list/task/:id": {
    "get": {
        "summary": "Mostrar uma lista",
        "description": "Mostrar uma lista com todas as tarefas",
        "responses": {
            "200": {
                "description": "Successful operation",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/task",
                            "$ref1": "#/components/schemas/task",
                            "$ref2": "#/components/schemas/task"
                        }
                    }
            
                }
            }
        }
    }
}
    },
    "components": {
        "schemas": {
            "task": {
                "required": [
                    "name",
                    "message"
                ],
                "type": "object",
                "properties": {
                    "id":{
                        "type": "integer",
                        "format": "int32",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "description": "nome da tarefa",
                        "example": "caminhada"
                    },
                    "message": {
                        "type": "string",
                        "description": "uma mensagem para poder descrever a tarefa",
                        "example": "vou caminhar na pra√ßa"
                    },
                    "schedule": {
                        "type": "string",
                        "description": "uma data pra agendar",
                        "example": "01/12;2023"
                    },
                    "completed": {
                        "type": "boolean"
                    },
                    "date": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "xml": {
                    "name": "task"
                }
            }
        }
    }
}